---
import processData from '../data/process.json';
---

<!-- Sección de Nuestro Proceso -->
<section class="relative py-20 overflow-hidden bg-gradient-to-r from-gray-900 to-gray-800">
  <!-- Líneas dinámicas de fondo (opcional) -->
  <div class="absolute inset-0 z-0">
    <svg
      class="w-full h-full opacity-20"
      viewBox="0 0 1440 600"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <!-- Líneas curvas -->
      <path
        d="M0 300Q240 400 480 300T960 300T1440 400"
        fill="none"
        stroke="#3B82F6"
        stroke-width="2"
        stroke-dasharray="6 6"
      />
      <path
        d="M0 400Q240 500 480 400T960 400T1440 500"
        fill="none"
        stroke="#3B82F6"
        stroke-width="2"
        stroke-dasharray="6 6"
      />
    </svg>
  </div>

  <!-- Contenido de la sección -->
  <div class="container mx-auto px-6 text-center relative z-10">
    <!-- Título de la sección -->
    <h2 class="text-4xl md:text-5xl font-bold text-white mb-16">
      Nuestro Proceso
    </h2>

    <!-- Pasos del proceso -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {processData.map((step) => (
        <div class="bg-gradient-to-br from-gray-800 to-gray-700 p-8 rounded-xl shadow-2xl hover:shadow-blue-500/20 transition-all duration-300 hover:scale-105">
          <!-- Icono -->
          <div class="text-5xl mb-6 text-blue-500">
            {step.icon}
          </div>
          <!-- Título -->
          <h3 class="text-2xl font-bold text-white mb-4">{step.title}</h3>
          <!-- Descripción -->
          <p class="text-gray-400">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>